@model Protection_Animal.Model.Entities.Application

</br>
</br>
<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit an application</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <label asp-for="ShortDesciption"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="ShortDesciption" class="form-control" />
                        <span asp-validation-for="ShortDesciption" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <label asp-for="IsActive" class="control-label"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" style="position:relative !important; left:20px;" /> 
                        </label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>

                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option disabled selected>--Select Category--</option>
                        </select>
                    </div>

                    <div class="col-4">
                        <label asp-for="AnimalId"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <select asp-for="AnimalId" class="form-control" asp-items="ViewBag.AnimalId">
                            <option disabled selected>--Select Animal--</option>
                        </select>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Edit" />
                           
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">

                @if (Model.Id != 0) 
                {
                    <img src="@("~/images/" + Model.Image)" asp-append-version="true" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 200,
                toolbar: [

                    ['font', ['bold', 'italic', 'underline', 'strikethrough']],
                    ['fontname', ['fontname']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ol', 'ul', 'paragraph', 'height']],
                    ['table', ['table']],
                    ['insert', ['link']],

                ],
                callbacks: {
                    onInit: function (c) {
                        c.editable.html('');
                    }
                }
            });
        });
    </script>
}