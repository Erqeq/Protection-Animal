<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">All Clients</h2>
        </div>
       
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelephoneNumber)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="50%">@item.Email</td>
                        <td width="50%">@item.TelephoneNumber</td>
                        
                        <td class="text-left">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id="@item.Id" asp-action="Details" class="btn btn-info mx-2">
                                    Details
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Ban
                                </a>
                               
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No clients exists.</p>
    }

</div>
