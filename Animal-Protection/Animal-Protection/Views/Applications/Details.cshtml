@model Protection_Animal.Model.Entities.Application

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.DateCreate.Year).@Html.DisplayFor(m => m.DateCreate.Month).@Html.DisplayFor(m => m.DateCreate.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sender.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@(Protection_Animal.Utility.WebConstants.ImagePath + @Model.Image)"
                 asp-append-version="true" width="250px" height="250px" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<p>
    <a href="mailto:@Html.DisplayFor(model=>model.Sender.Email)?subject=@Html.DisplayFor(model => model.Category.Name)"><img src="~/images/image.jpg"><a />
<p />
<p>
         Номер телефона - @Html.DisplayFor(model=> model.Sender.TelephoneNumber)
</p>
