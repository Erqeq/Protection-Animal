@using Protection_Animal.Utility
@model Protection_Animal.Model.Entities.Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@(Protection_Animal.Utility.WebConstants.ImagePath + @Model.Image)"
            asp-append-version = "true" width="250px" height="250px" />
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(WebConstants.Admin))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
 
    }
    
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
